            </div>

            <div class="input-field">
                <input id="mdp" type="password" name="_mdp" required/>
                <label for="mdp">Mot de passe :</label>
                <span class="helper-text" style="color: #e23317">{{ error }}</span>
            </div>

            <button class="waves-effect waves-light btn green lighten-2" style="width: 100%" type="submit">login</button>
            <div class="right" style="margin-top: 10px">
                Pas de compte ? - <a href="{{ path('register') }}">Cr√©er un compte</a>
            </div>


        </form>



    </div>

{% endblock %}